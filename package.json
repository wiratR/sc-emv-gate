{
  "name": "sc-emv-gate",
  "version": "1.0.0",
  "private": true,
  "description": "Electron + React + TS + Tailwind + Vite",
  "main": "dist-electron/main.js",
  "author": {
    "name": "Siam Infinity Solution",
    "email": "wirat.r@sissolution.co.th"
  },
  "license": "MIT",
  "scripts": {
    "dist:clean": "rimraf --glob dist dist-electron dist-* out",
    "build:renderer": "vite build",
    "build:main": "tsc -p tsconfig.electron.json",
    "pack": "electron-builder --dir",
    "build": "npm run dist:clean && npm run build:renderer && npm run build:main && electron-builder -c electron-builder.yml",
    "build:mac": "npm run dist:clean && npm run build:renderer && npm run build:main && electron-builder --mac -c electron-builder.yml",
    "build:win": "npm run dist:clean && npm run build:renderer && npm run build:main && electron-builder --win -c electron-builder.yml",
    "build:linux": "npm run dist:clean && npm run build:renderer && npm run build:main && electron-builder --linux -c electron-builder.yml",
    "dev": "concurrently -k \"vite --config vite.config.ts\" \"npm:dev:main\" \"npm:dev:electron\"",
    "dev:main": "tsc -p tsconfig.electron.json --watch",
    "dev:electron": "wait-on http://localhost:5173 dist-electron/main.js && nodemon",
    "preview": "vite preview",
    "rebuild": "electron-rebuild -f -w better-sqlite3,node-pty",
    "postinstall": "node scripts/postinstall.js",
    "normalize:devices": "node scripts/normalize-devices.js",
    "mock:probe": "node scripts/mock-probe.mjs",
    "mock:hb": "node scripts/mock-hb.mjs",
    "mock:op:list": "node scripts/mock-op.mjs list",
    "mock:op:get": "node scripts/mock-op.mjs get G1-01",
    "mock:op:set:entry": "node scripts/mock-op.mjs set G1-01 in:entry",
    "mock:op:set:exit": "node scripts/mock-op.mjs set G1-01 in:exit",
    "mock:op:set:bi": "node scripts/mock-op.mjs set G1-01 bi",
    "mock:op:set:oos": "node scripts/mock-op.mjs set G1-01 oos",
    "mock:op:set:close": "node scripts/mock-op.mjs set G1-01 close",
    "mock:op:set:emer": "node scripts/mock-op.mjs set G1-01 emergency",
    "mock:hb:online": "cross-env MOCK_DEVICE_STATUS=online node scripts/mock-hb.mjs",
    "mock:hb:maint": "cross-env MOCK_DEVICE_STATUS=maintenance node scripts/mock-hb.mjs",
    "mock:hb:fault": "cross-env MOCK_DEVICE_STATUS=fault node scripts/mock-hb.mjs",
    "mock:hb:seq": "cross-env MOCK_HB_STATUS_SEQ=online,maintenance,online,fault node scripts/mock-hb.mjs",
    "mock:hb:random": "cross-env MOCK_HB_STATUS_SEQ=online,maintenance,fault MOCK_HB_RANDOM=1 node scripts/mock-hb.mjs",
    "mock:hb:custom": "cross-env MOCK_HB_HOST=127.0.0.1 MOCK_HB_PORT=3070 MOCK_DEVICE_ID=G1-01 MOCK_DEVICE_IP=127.0.0.1 node scripts/mock-hb.mjs",
    "sim:run": "node scripts/device-sim.mjs run --id G1-01 --ip 127.0.0.1 --hb-interval 5000 --op-poll 2000 --probe-port 2222 --probe on",
    "sim:get": "node scripts/device-sim.mjs get G1-01",
    "sim:set:entry": "node scripts/device-sim.mjs set G1-01 in:entry",
    "sim:set:exit": "node scripts/device-sim.mjs set G1-01 in:exit",
    "sim:set:bi": "node scripts/device-sim.mjs set G1-01 bi",
    "sim:set:oos": "node scripts/device-sim.mjs set G1-01 oos",
    "sim:set:close": "node scripts/device-sim.mjs set G1-01 close",
    "sim:set:emer": "node scripts/device-sim.mjs set G1-01 emer"
  },
  "dependencies": {
    "bcryptjs": "^3.0.2",
    "better-sqlite3": "^12.2.0",
    "node-pty": "^1.0.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-router-dom": "^7.8.0",
    "@xterm/xterm": "^5.5.0",
    "@xterm/addon-fit": "^0.9.0"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/better-sqlite3": "^7.6.13",
    "@types/react": "^18.3.5",
    "@types/react-dom": "^18.3.0",
    "@vitejs/plugin-react": "^4.3.3",
    "autoprefixer": "^10.4.20",
    "concurrently": "^9.0.1",
    "cross-env": "^10.0.0",
    "electron": "^30.0.0",
    "electron-builder": "^25.1.8",
    "@electron/rebuild": "^3.6.0",
    "nodemon": "^3.1.4",
    "postcss": "^8.4.47",
    "rimraf": "^6.0.1",
    "tailwindcss": "^3.4.10",
    "typescript": "^5.5.4",
    "vite": "^6.3.5",
    "vite-plugin-svgr": "^4.3.0",
    "wait-on": "^8.0.2"
  }
}
