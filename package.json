{
  "name": "sc-emv-gate",
  "version": "1.0.0",
  "private": true,
  "description": "Electron + React + TS + Tailwind + Vite",
  "main": "dist-electron/main.js",
  "author": "",
  "license": "MIT",
  "scripts": {
    "dist:clean": "rimraf dist dist-electron dist-* out",
    "build:renderer": "vite build",
    "build:main": "tsc -p tsconfig.electron.json",
    "pack": "electron-builder --dir",
    "build": "npm run dist:clean && npm run build:renderer && npm run build:main && electron-builder",
    "build:mac": "npm run dist:clean && npm run build:renderer && npm run build:main && electron-builder --mac",
    "build:win": "npm run dist:clean && npm run build:renderer && npm run build:main && electron-builder --win",
    "build:linux": "npm run dist:clean && npm run build:renderer && npm run build:main && electron-builder --linux",
    "dev": "concurrently -k \"vite --config vite.config.ts\" \"npm:dev:main\" \"npm:dev:electron\"",
    "dev:main": "tsc -p tsconfig.electron.json --watch",
    "dev:electron": "wait-on http://localhost:5173 dist-electron/main.js && nodemon",
    "preview": "vite preview",
    "rebuild": "electron-rebuild -f -w better-sqlite3",
    "postinstall": "electron-rebuild -f -w better-sqlite3 || true"
  },
  "build": {
    "appId": "com.example.sc-emv-gate",
    "productName": "sc-emv-gate",
    "files": [
      "dist/**",
      "dist-electron/**",
      "package.json"
    ],
    "directories": {
      "buildResources": "build"
    },
    "asar": true,
    "asarUnpack": [
      "node_modules/better-sqlite3/**"
    ],
    "mac": {
      "category": "public.app-category.utilities",
      "target": [
        "dmg",
        "zip"
      ],
      "hardenedRuntime": true,
      "entitlements": "build/entitlements.mac.plist",
      "entitlementsInherit": "build/entitlements.mac.plist",
      "gatekeeperAssess": false,
      "icon": "build/icon.icns"
    },
    "dmg": {
      "icon": "build/icon.icns"
    },
    "win": {
      "target": [
        "nsis",
        "zip"
      ],
      "icon": "build/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "category": "Utility",
      "icon": "build/icons"
    }
  },
  "dependencies": {
    "bcryptjs": "^3.0.2",
    "better-sqlite3": "^12.2.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-router-dom": "^7.8.0"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/react": "^18.3.5",
    "@types/react-dom": "^18.3.0",
    "@vitejs/plugin-react": "^4.3.3",
    "autoprefixer": "^10.4.20",
    "concurrently": "^9.0.1",
    "cross-env": "^10.0.0",
    "electron": "^30.0.0",
    "electron-builder": "^25.1.8",
    "electron-rebuild": "^3.2.9",
    "nodemon": "^3.1.4",
    "postcss": "^8.4.47",
    "rimraf": "^6.0.1",
    "tailwindcss": "^3.4.10",
    "typescript": "^5.5.4",
    "vite": "^6.3.5",
    "wait-on": "^8.0.2"
  }
}
